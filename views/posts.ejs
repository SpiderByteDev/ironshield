<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts | IronShield</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f8;
    }
    .post-card {
      margin-bottom: 20px;
    }
  </style>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">IronShield</a>
    <div class="navbar-nav ms-auto">
      <a class="nav-link" href="/">Home</a>
      <a class="nav-link active" href="/posts">Posts</a>
      <a class="nav-link" href="/post/new">New Post</a>
      <% if(user && user.role === 'admin'){ %>
        <a class="nav-link" href="/admin">Admin</a>
      <% } %>
      <a class="nav-link" href="/logout">Logout</a>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <h3 class="mb-4">All Posts</h3>

  <% if(posts.length === 0){ %>
    <div class="alert alert-secondary">
      No posts available. Create one to get started.
    </div>
  <% } %>

  <div class="row">
    <% posts.forEach(p => { %>
      <div class="col-md-6 post-card">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= p.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">by <%= p.user %></h6>
            <p class="card-text"><%- p.content %></p>

            <% if(user && user.username === p.user){ %>
              <form method="POST" action="/post/delete/<%= p.id %>">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

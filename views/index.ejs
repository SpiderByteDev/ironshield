 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini App</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f8;
    }
    .hero {
      padding: 80px 20px;
      text-align: center;
    }
    .hero h1 {
      font-weight: 600;
    }
    .hero p {
      color: #555;
      max-width: 600px;
      margin: 15px auto;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">IronShield</a>

      <div class="navbar-nav ms-auto">
        <a class="nav-link active" href="/">Home</a>

        <% if(typeof user !== 'undefined' && user){ %>
          <a class="nav-link" href="/posts">Posts</a>
          <a class="nav-link" href="/post/new">New Post</a>

          <% if(user.role === 'admin'){ %>
            <a class="nav-link" href="/admin">Admin</a>
          <% } %>

          <a class="nav-link" href="/logout">Logout</a>
        <% } else { %>
          <a class="nav-link" href="/login">Login</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- HERO / LANDING -->
  <div class="container hero">
    <h1>Welcome to Mini App</h1>
    <p>
      A simple internal web application designed for demonstrating
      authentication, CRUD functionality, and security testing in a controlled environment.
    </p>

    <% if(typeof user === 'undefined' || !user){ %>
      <a href="/login" class="btn btn-primary btn-lg mt-3">Login to Continue</a>
    <% } else { %>
      <a href="/posts" class="btn btn-primary btn-lg mt-3">View Posts</a>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
